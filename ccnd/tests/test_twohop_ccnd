WithCCND 1 ccnd &
WithCCND 2 ccnd &
WithCCND 3 ccnd &

sleep 1 2>/dev/null

Linkup () {
  D=$1
  R=$2
  shift 2
  WithCCND $D udplink -h localhost -r $((CCN_LOCAL_PORT_BASE+$R)) -l $((9100 + $D + 10 * $R)) "$@" &
}

# 0 --- 1 --- 2
#       |
#       3

Linkup 0 1
Linkup 1 2
Linkup 1 3 -ddd
sleep 1

# hack to get second direction
ccnget -c ccn:/nosuchcontent | wc -l

#WithCCND 2 RunTest test_long_consumer
#test 1 -eq `WithCCND 3 ccndumpnames | wc -l` || Fail spur ccnd should only have one item
export CCN_LOCAL_PORT=$((CCN_LOCAL_PORT_BASE+2))
. ./test_long_consumer
