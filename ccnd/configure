#!/bin/sh
CONFDIR="`dirname $0`/conf"

TryAppend () {
 test -f "$CONFDIR"/"$1".mk || return 0
 cat "$CONFDIR"/"$1".mk >> conf.mk
}

TryScript () {
 SCRIPT="$CONFDIR"/"$1".sh
 shift
 test -f "$SCRIPT" || return 0
 sh "$SCRIPT" "$@"
}

test -f conf.mk && mv conf.mk conf.mk~
echo '#' generated `date` `uname -nsrv` > conf.mk
TryAppend "`uname`"
TryAppend "`uname -sr | sed -e 's/ /-/g'`"
TryScript "`uname`" "$@"
TryScript "python" "$@"
echo ============= conf.mk =============>&2
cat conf.mk				>&2
echo ===================================>&2
