DISTHOST="${1:-sylvester}"
DIR=/tmp/$USER/mcast
mkdir -p $DIR
cd $DIR || exit 1
scp $DISTHOST:ccnx.tar.gz .
tar xfz ccnx.tar.gz
make TOPSUBDIRS=csrc CFLAGS='-g -O3'
(cd csrc/ccnd && make test)
cd experiments/multicast
./startccnd
